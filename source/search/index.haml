%section#search-nav-section
	.search-nav.nav-default#search-nav
		.container
			.row
				.col-lg-12
					%form.half-margin-top.provider-search-mobile.visible-xs
						%a.btn.btn-default.btn-block{:href => "javaScript:void(0);","data-toggle"=>"modal","data-target"=>"#providerSearchModal"}
							.icon
								%i.fa.fa-search
							.text
								General dentistry in 80000 | Aetna - NYC community
					%form.half-margin-top.provider-search.hidden-xs
						=partial"search/search-fields"
			.row
				.col-md-7
				.col-md-5
					.hidden-sm.hidden-xs
						.search-map-wrapper
							.search-map
								%img.full-width{:src=>"/Content/images/tmp/search-map.png"}

%section#providerSearch.no-padding-top
	.container
		.row
			.col-md-7
				.half-padding-top.padding-bottom
					.btn-group
						%a.btn.btn-link.btn-filter.dropdown-toggle{:href=>"javascript:void(0)", "data-toggle"=>"dropdown"}
							%span.light-text-color
								Service:
							Routine cleaning
							%i.fa.fa-chevron-down
						%ul.dropdown-menu
							%li
								%a{:href=>"#"}
									Option
							%li
								%a{:href=>"#"}
									Option
					.btn-group
						%a.btn.btn-link.btn-filter.dropdown-toggle{:href=>"javascript:void(0)", "data-toggle"=>"dropdown"}
							%span.light-text-color
								Sort by:
							distance
							%i.fa.fa-chevron-down
						%ul.dropdown-menu
							%li.active
								%a{:href=>"#"}
									Distance
							%li
								%a{:href=>"#"}
									Top rated

				.search-list
					-10.times do
						=partial"search/provider-thumb"
				%a.btn.btn-block.btn-default{:href=>"#"}
					Load more
			.col-md-5


:javascript
	$(window).load(function(){
	    $('.search-nav').affix({
	      offset: {
	        top: $('.search-nav').offset().top
	      }
	    });

	});


