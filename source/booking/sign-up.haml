									.form-group
										%label
											Phone
										%input.form-control.input-lg{:placeholder=>"Ex: 333-444-5555"}
									.form-group
										%label
											Create password
										%input.form-control.input-lg

									.checkbox
										%label
											%input{:type=>"checkbox", :checked=>"checked"}
											Connect and access recommendations from Dr. Barillas's professional network.

