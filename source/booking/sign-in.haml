%section
	.container
		.row
			.col-lg-3
			.col-lg-6
				.panel.panel-sm
					.panel-body
						%h3.bold-font-name.text-center
							Sign in to complete booking
						.padded.no-padding-sm.half-padding-top
							.half-margin-bottom
								=partial"shared/user-line-item"
							.row
								.col-xs-6
									%h5.bold-font-name.quarter-margin-bottom
										Location
									%h5.no-margin-top
										18 East 48th Street
										%br
										Suite 1502
										%br
										New York, NY 1001
								.col-xs-6
									%h5.bold-font-name.quarter-margin-bottom
										Reason for visit
									%h5.no-margin-top
										General dentistry
									%h5.bold-font-name.quarter-margin-bottom
										Appointment
									%h5.no-margin-top
										Thurs, Apr 27 - 10:00am
							.row
								.col-lg-12
									.margin-bottom
										%h4.text-center
											Sign in to your Patient Plus account
										.form-group
											%input.form-control.input-lg{:placeholder=>"Email or username"}
										.form-group
											%input.form-control.input-lg{:placeholder=>"Password"}
										.form-group
											%a.btn-lg.btn-block.btn-primary.btn{:href=>"/booking/review"}
												Sign In

									%h4.text-center
										New to patient plus?
									%button.btn-lg.btn-block.btn-default.btn{:type=>"button"}
										Join now

			.col-lg-3
