%section#services.bg-off-white
	.container
		.row
			.col-md-1
			.col-md-10
				%h2.text-center.bold-font-name.headline-bordered.centered
					Services
				.spacer-default
					.row.row-centered
						-8.times do
							.col-sm-3.col-xs-6.col-centered	
								%a{:href => "javaScript:void(0);","data-toggle"=>"modal","data-target"=>"#serviceModal"}
									.card-service
										%img.img-responsive{:src=>"/Content/images/tmp/service-bg@2x.png"}
										.card-footer.text-center
											%h4.bold-font-name.no-margin-bottom
												Scaling & Root Planning 
											%span.hidden-sm.hidden-xs
												%h5.bold-font-name
													More info
													%i.fa.fa-chevron-circle-right
			.col-md-1
		.row
			.col-sm-1
			.col-sm-10
				%h4.text-center.medium-font-name
					Additional services
				.spacer-default
					.row
						-5.times do
							.col-lg-4.col-md-6.col-xs-12	
								.row.margin-bottom
									/ .col-xs-2
									/ 	.service-icon
									/ 		%img{:src=>"/Content/images/icon-tooth.png"}
									.col-xs-12
										%h6.light-text-color.half-margin-bottom.medium-font-name
											Comfort & TECHNOLOGY
										%ul.list-unstyled.medium-font-name
											- 10.times do
												%li
													%a{:href => "javaScript:void(0);","data-toggle"=>"modal","data-target"=>"#serviceModal"}
														=lorem.words(2)
			.col-sm-1
		.row
			.col-lg-12	
				%h2.text-center.bold-font-name.headline-bordered.centered
					Endorsements
				.spacer-default
					.row
						.col-lg-1
						.col-lg-10
							.panel
								.padded
									-4.times do
										.panel-endorse
											.grid-info
												.chip
													%h5.no-margin
														%span.bold-font-name
															Scaling & Root Planning
														43
												%a.btn.btn-default.btn-rounded.check-btn{:href=>"#", "data-toggle"=>"tooltip", "data-placement"=>"top", "title"=>"Endorse this service"}
													%i.fa.fa-plus
											.grid-info
												%h5.no-margin.full-width
													Endorsed by
													%span.bold-font-name
														%a{:href => "javaScript:void(0);","data-toggle"=>"modal","data-target"=>"#usersModal"}
															=lorem.name+","
															=lorem.name
															and 42 more
											.grid-info
												%ul.list-inline.full-width.avatars-list
													-2.times do
														%li
															%a.dr-hovercard-trigger.display-block{:href=>"#", "data-popover-content"=>"#dr-hovercard"}
																%img.avatar-sm.avatar-default{:src=>"/Content/images/tmp/avatar-1.png"}
													%li
														%a{:href => "javaScript:void(0);","data-toggle"=>"modal","data-target"=>"#usersModal"}
															.more
																%i.fa.fa-ellipsis-h
						.col-lg-1






