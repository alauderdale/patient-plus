//add location modal
#addLocationModal.modal{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
	.modal-dialog{:role => "document"}
		.modal-content
			.modal-header.no-border-bottom.text-center
				%button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
					%span{"aria-hidden" => "true"} 
						Ã—
				%h4.modal-title.text-center.no-margin-bottom.bold-font-name
					Add location
			.modal-body.no-padding-bottom
				.row.margin-bottom
					.col-sm-7
						.row
							.col-sm-12
								.form-group
									%label.bold-label
										Location name (for your us eonly)
									%input.form-control{:type=>"text",:placeholder=>"Dental Express"}
						.row
							.col-sm-12
								.form-group
									%label.bold-label
										Street address
									%input.form-control{:type=>"text",:placeholder=>"123 Place way"}
						.row
							.col-sm-12
								.form-group
									%label.bold-label
										City
									%input.form-control{:type=>"text",:placeholder=>"Manhattan"}
						.row
							.col-sm-8
								.form-group
									%label.bold-label
										State
									%select.form-control
										%option
											Select a state
							.col-sm-4
								.form-group
									%label.bold-label
										Zip
									%input.form-control{:type=>"text",:placeholder=>"99999"}
					.col-sm-5
						%img.img-responsive{:src=>"/Content/images/tmp/map_add_location.png"}
				.row.margin-bottom
					.col-sm-12
						%label.bold-label.margin-bottom
							Hours
							%a{:href=>"#"}
								Show hours
								%i.fa.fa-chevron-up
						.row
							.col-xs-2
								.form-group
									%label.bold-label
										Sunday
							.col-xs-2
								.checkbox.full-width{:style=>"position:relative; top:-10px;"}
									%input.full-width{:type=>"checkbox", "data-toggle"=>"toggle"}
							.col-xs-8
								%p
									Closed
						-6.times do
							.row
								.col-xs-2
									.form-group
										%label.bold-label
											Monday
								.col-xs-2
									.checkbox.full-width{:style=>"position:relative; top:-10px;"}
										%input.full-width{:type=>"checkbox", :checked=>"checked", "data-toggle"=>"toggle"}
								.col-xs-8
									.row
										.col-xs-5
											%select.form-control
												%option
													9:00am
										.col-xs-1
											%p.text-center
												:escaped
													-
										.col-xs-5
											%select.form-control
												%option
													9:00am
										.col-xs-1


			.modal-footer.no-border-top.text-center.no-padding-top.padding-bottom
				.row
					.col-lg-12
						%a.btn.btn-link{:href=>"#", "data-dismiss" => "modal"}
							Cancel
						%a.btn.btn-primary{:href=>"#", "data-dismiss" => "modal"}
							Add

